<% layout('layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h4>Edit your Listings : </h4>
    <form method="POST" action="/listings/<%=listings._id%>?_method=PUT">
    <div>
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" value="<%= listings.title %>" class="form-control" type="text">
    </div>
    <div>
        <label for="title" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" type="text"> <%=listings.description %></textarea>
    </div>
    <div>
        <label for="title" class="form-label">Image</label>
        <input name="listing[image]" value="<%= listings.image %>" class="form-control" type="text">
    </div>
 <div class="row">
    <div class="mb-3 col-4">  
        <label for="title" class="form-label">Price</label>
        <input name="listing[price]" value="<%= listings.price %>" class="form-control" type="number">
    </div>
    <div class="mb-3 col-8">
        <label for="title" class="form-label">Country</label>
        <input name="listing[country]" value="<%= listings.country %>" class="form-control" type="text">
    </div>
</div>
    <div>
        <label for="title" class="form-label">Location</label>
        <input name="listing[location]" value="<%= listings.location %>" class="form-control" type="text">
    </div>
    <br>
        <button class="btn btn-dark edit-btn">Edit</button>
    </form>
    </div>
    </div>
</body>
</html>